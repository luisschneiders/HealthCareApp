@if (Info is null)
{
    <div class="employee-details employee-details-empty h-100 d-flex flex-column justify-content-center align-items-center">
        <p>
            <h4 class="text-secondary">Employee Details</h4>
            <i class="bi bi-body-text employee-details-icon icon"></i>
            <span class="text-dark">Select employee from the list to see more details.</span>
        </p>
    </div>
}
else
{
    @if (Loading)
    {
        <div class="employee-details employee-details-info h-100 d-flex flex-column justify-content-center align-items-center">
            <div class="spinner-border text-info" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div>Loading...</div>
        </div>
    }
    else
    {
        <div class="employee-details employee-details-info">
            <fieldset class="px-2 pb-3">
                <legend><i class="bi bi-telephone"></i> Contact Details</legend>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label fw-bolder"
                                for="Email">
                            Email
                        </label>
                        <input type="text"
                                class="form-control-plaintext hca-form-control-plaintext"
                                id="Email"
                                value="@Info.ContactDetails.Email"
                                readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label class="form-label fw-bolder"
                                for="Mobile">
                            Mobile
                        </label>
                        <input type="text"
                                class="form-control-plaintext hca-form-control-plaintext"
                                id="Mobile"
                                value="@Info.ContactDetails.Mobile"
                                readonly />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label fw-bolder"
                                for="Phone">
                            Phone
                        </label>
                        <input type="text"
                                class="form-control-plaintext hca-form-control-plaintext"
                                id="Phone"
                                value="@Info.ContactDetails.Phone"
                                readonly />
                    </div>
                </div>
            </fieldset>
            <fieldset class="px-2 pb-5">
                <legend><i class="bi bi-pin-map"></i> Address</legend>
                <div class="row">
                    <div class="col-sm-12">
                        <label class="form-label fw-bolder"
                                for="Address">
                            Address
                        </label>
                        <input type="text"
                                class="form-control-plaintext hca-form-control-plaintext"
                                id="Address"
                                value="@Info.Location.Address"
                                readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="form-label fw-bolder"
                                for="Suburb">
                            Suburb
                        </label>
                        <input type="text"
                                class="form-control-plaintext hca-form-control-plaintext"
                                id="Suburb"
                                value="@Info.Location.Suburb"
                                readonly />
                    </div>
                    <div class="col-sm-4">
                        <label class="form-label fw-bolder"
                                for="State">
                            State
                        </label>
                        <input type="text"
                                class="form-control-plaintext hca-form-control-plaintext"
                                id="State"
                                value="@Info.Location.State"
                                readonly />
                    </div>
                    <div class="col-sm-4">
                        <label class="form-label fw-bolder"
                                for="Postcode">
                            Postcode
                        </label>
                        <input type="text"
                                class="form-control-plaintext hca-form-control-plaintext"
                                id="Postcode"
                                value="@Info.Location.Postcode"
                                readonly />
                    </div>
                </div>
            </fieldset>
        </div>
    }
}
