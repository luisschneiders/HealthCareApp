@page "/admin/employees";
@using HealthCareApp.Settings.Theme;
@using HealthCareApp.Components.Message;
@using HealthCareApp.Components.PageV3;
@using HealthCareApp.Components.CardV3;
@using HealthCareApp.Components.Breadcrumb;
@using HealthCareApp.Components.Toast;
@using HealthCareApp.Components.Spinner;
@using HealthCareApp.Components.OffCanvas;
@using HealthCareApp.Settings.Enum;

<div class="container-lg">
    <AuthorizeView>
        <Authorized>
            <PageWrapper>

                <PageTopView>
                    <PageTopWrapper>
                        <PageTopTitle Title="Employees" />
                        <Breadcrumb />
                    </PageTopWrapper>
                </PageTopView>

                <PageMiddleView>
                    <PageMiddleWrapper>
                        <div class="row flex-row-reverse justify-content-between pb-2">
                            <div class="col-sm-12 col-md-3 col-lg-3 pb-4">
                                <button class="btn btn-success w-100"
                                        @onclick="() => AddRecordAsync()">
                                    <i class="bi bi-plus-lg pe-2"></i>
                                    New employee
                                </button>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-4 pb-2">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Start typing to search employees..."
                                       aria-label="search"
                                       @bind-value="_searchTerm"
                                       @oninput="SearchEmployeeAsync">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <CardView>
                                    <CardMiddle>
                                        <div class="d-flex flex-row justify-content-evenly align-items-center">
                                            <Spinner Size="Size.Md" />
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="text-muted">
                                                    <tr>
                                                        <th>
                                                            First name
                                                        </th>
                                                        <th>
                                                            Last name
                                                        </th>
                                                        <th>
                                                            Email
                                                        </th>
                                                        <th colspan="3">
                                                            Active?
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody class="table-group-divider">
                                                    @if (!_isSearchResults)
                                                    {
                                                        <Virtualize Context="person"
                                                                    ItemsProvider="@LoadEmployees"
                                                                    @ref="_virtualizeContainer">
                                                            <ItemContent>
                                                                <tr class="py-5">
                                                                    <td>
                                                                        @person.EmployeeFirstName
                                                                    </td>
                                                                    <td>
                                                                        @person.EmployeeLastName
                                                                    </td>
                                                                    <td>
                                                                        @person.EmployeeEmail
                                                                    </td>
                                                                    <td>
                                                                        <div class="form-check form-switch">
                                                                            @if (person.IsActive)
                                                                                {
                                                                                <input class="form-check-input"
                                                                                       type="checkbox"
                                                                                       role="switch"
                                                                                       id="IsActive"
                                                                                       checked
                                                                                       @onclick="() => UpdateEmployeeStatusAsync(person)" />
                                                                                }
                                                                                else
                                                                                {
                                                                                <input class="form-check-input"
                                                                                       type="checkbox"
                                                                                       role="switch"
                                                                                       id="IsActive"
                                                                                       @onclick="() => UpdateEmployeeStatusAsync(person)" />
                                                                                }
                                                                        </div>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <button class="btn btn-link p-0 text-info"
                                                                                type="button"
                                                                                title="View details"
                                                                                @onclick="() => ViewDetailsAsync(person.Id)">
                                                                            <i class="bi bi-eye-fill"></i>

                                                                        </button>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <button class="btn btn-link p-0 text-danger"
                                                                                type="button"
                                                                                title="Edit"
                                                                                @onclick="() => EditDetailsAsync(person.Id)">
                                                                            <i class="bi bi-pencil"></i>
                                                                        </button>
                                                                    </td>
                                                                </tr>
                                                            </ItemContent>

                                                            <Placeholder>
                                                                <tr>
                                                                    <td colspan="6">
                                                                        <Spinner Size="Size.Md" />
                                                                    </td>
                                                                </tr>
                                                            </Placeholder>
                                                        </Virtualize>
                                                    }
                                                    @if (_isSearchResults)
                                                    {
                                                        @foreach (var person in _results)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @person.EmployeeFirstName
                                                                </td>
                                                                <td>
                                                                    @person.EmployeeLastName
                                                                </td>
                                                                <td>
                                                                    @person.EmployeeEmail
                                                                </td>
                                                                <td>
                                                                    <div class="form-check form-switch">
                                                                        @if (person.IsActive)
                                                                        {
                                                                            <input class="form-check-input"
                                                                                   type="checkbox"
                                                                                   role="switch"
                                                                                   id="IsActive"
                                                                                   checked
                                                                                   @onclick="() => UpdateEmployeeStatusAsync(person)" />
                                                                        }
                                                                        else
                                                                        {
                                                                            <input class="form-check-input"
                                                                                   type="checkbox"
                                                                                   role="switch"
                                                                                   id="IsActive"
                                                                                   @onclick="() => UpdateEmployeeStatusAsync(person)" />
                                                                        }
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <button class="btn btn-link p-0 text-info"
                                                                            type="button"
                                                                            title="View details"
                                                                            @onclick="() => ViewDetailsAsync(person.Id)">
                                                                        <i class="bi bi-eye-fill"></i>

                                                                    </button>
                                                                </td>
                                                                <td>
                                                                    <button class="btn btn-link p-0 text-danger"
                                                                            type="button"
                                                                            title="Edit"
                                                                            @onclick="() => EditDetailsAsync(person.Id)">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </CardMiddle>
                                </CardView>
                            </div>
                        </div>
                    </PageMiddleWrapper>
                </PageMiddleView>

                <PageBottomView />

            </PageWrapper>

            <Toast />
            <EmployeeOffCanvas @ref="_employeeOffCanvas" OnSubmitSuccess="RefreshVirtualizeContainer" />
        </Authorized>

        <NotAuthorized>
            <NotAuthorizedMessage />
        </NotAuthorized>
    </AuthorizeView>
</div>
