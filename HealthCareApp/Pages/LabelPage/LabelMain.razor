@page "/labels"
@using HealthCareApp.Components.Message
@using HealthCareApp.Components.Page
@using HealthCareApp.Settings.Theme

<AuthorizeView>
    <Authorized>
        <PageWrapper>
            <PageHeader>
                <PageHeaderTitle Title="Labels" />
            </PageHeader>
            <PageBody Styles="p-2">
                <div class="d-flex justify-content-center">
                    <div class="col-sm-12 col-lg-6">
                        <div class="list-group">
                            <NavLink class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center" aria-current="true"
                                     href="/labels/label-mop">
                                <i class="bi bi-upc md-icon text-info"></i>
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div>
                                        <h6 class="mb-0">Label Mop Design</h6>
                                        <p class="mb-0 opacity-75">Create label with department, location, pick up time, return time and quantity.</p>
                                    </div>
                                </div>
                                <i class="bi bi-chevron-right md-icon"></i>
                            </NavLink>
                            <NavLink class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center disabled" aria-current="true"
                                     href="/labels/label-chemicals">
                                <i class="bi bi-upc md-icon text-info"></i>
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div>
                                        <h6 class="mb-0">Label Chemicals Design</h6>
                                        <p class="mb-0 opacity-75">Create label with department, location and quantity.</p>
                                    </div>
                                </div>
                                <i class="bi bi-chevron-right md-icon"></i>
                            </NavLink>
                        </div>
                    </div>
                </div>
            </PageBody>
            <PageFooter></PageFooter>
        </PageWrapper>
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedMessage />
    </NotAuthorized>
</AuthorizeView>
