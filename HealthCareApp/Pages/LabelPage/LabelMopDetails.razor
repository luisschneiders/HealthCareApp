@if (Info is null)
{
    <div class="label-mop-details label-mop-details-empty h-100 d-flex flex-column justify-content-center align-items-center">
        <p>
            <h4 class="text-secondary">Label Details</h4>
            <i class="bi bi-body-text label-mop-details-icon icon"></i>
            <span class="text-dark">Select label from the list to see more details.</span>
        </p>
    </div>
}
else
{
    @if (Loading)
    {
        <div class="label-mop-details label-mop-details-info h-100 d-flex flex-column justify-content-center align-items-center">
            <div class="spinner-border text-info" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div>Loading...</div>
        </div>
    }
    else
    {
        <div class="label-mop-details">
            <ComponentMopDetails Model="Info"
                        FieldsetStyle="px-2 pb-3 mop-details-info"
                        Icon="bi bi-info-square" />
        </div>
    }
}
