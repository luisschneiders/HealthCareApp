@page "/playground/page-v2"

@using HealthCareApp.Components.PageV2;

<PageWrapper>

    @* Header View*@
    <PageHeaderView>
        <PageHeaderWrapper>

            <PageHeaderTitle Title="Page v2"
                             ParentLink="/playgrounds"
                             ParentTitle="Playgrounds" />


            <PageHeaderMenu />


        </PageHeaderWrapper>
    </PageHeaderView>

    @* Body View*@
    <PageBodyView>
        <PageBodyWrapper>

            <div class="container">
                <div class="row">
                    <div class="col">
                        <p>
                            <h4 class="hca-app-title">How to use</h4>
                            <hr />
                        </p>

                        @foreach (var markupString in _componentMarkupList)
                        {
                            <div>
                                <h5>@markupString.Title</h5>
                                <p class="highlight p-2">
                                    <code>
                                        @foreach (var (item, index) in markupString.Code.Select((value, index) => (value, index)))
                                        {
                                            <span class="@markupString.CssStyle[index]">
                                                @item
                                            </span>
                                            <br />
                                            @if (@markupString.NewLine[index])
                                            {
                                                <br />
                                            }
                                        }
                                    </code>
                                </p>
                            </div>
                        }
                    </div>
                    <div class="col markup-background hca-border-radius">
                        <p>
                            <h4 class="text-black-50">Example</h4>
                            <hr />
                        </p>
                        <div class="d-flex flex-column justify-content-evenly align-items-center">

                            <PageWrapper Styles="w-100">
                                <PageHeaderView>
                                    <PageHeaderWrapper Styles="page-header-background">
                                        <PageHeaderTitle Title="Page v2" />
                                        <PageHeaderMenu>
                                            <button type="button" class="btn btn-outline-danger btn-rounded btn-icon">
                                                <i class="bi bi-trash"></i>
                                            </button>

                                            <button type="button" class="btn btn-outline-primary btn-rounded btn-icon">
                                                <i class="bi bi-plus-lg"></i>
                                            </button>
                                            <button type="button" class="btn btn-light btn-rounded btn-icon">
                                                <i class="bi bi-search"></i>
                                            </button>
                                        </PageHeaderMenu>
                                    </PageHeaderWrapper>
                                </PageHeaderView>
                                <PageBodyView>
                                    <PageBodyWrapper Styles="page-body-background">
                                        <div class="h-100 d-flex justify-content-center align-items-center">Page body...</div>
                                    </PageBodyWrapper>
                                </PageBodyView>
                                <PageFooterView>
                                    <PageFooterWrapper Styles="page-footer-background">
                                        <span>
                                            Page footer...
                                        </span>
                                    </PageFooterWrapper>
                                </PageFooterView>
                            </PageWrapper>

                        </div>
                    </div>
                </div>
            </div>

        </PageBodyWrapper>
    </PageBodyView>

    @* Footer View*@
    <PageFooterView>
        <PageFooterWrapper />
    </PageFooterView>
</PageWrapper>
