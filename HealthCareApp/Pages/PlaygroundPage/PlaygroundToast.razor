@page "/playground/toast"
@using HealthCareApp.Components.Page
@using HealthCareApp.Components.Toast

<PageWrapper>
    <PageHeader>
        <PageHeaderTitle Title="Toast"
                         ParentLink="/playground"
                         ParentTitle="Playground" />
        <PageMenu />
    </PageHeader>
    <PageBody>
        <div class="container">
            <div class="row">
                <div class="col">
                    <p>
                        <h4 class="hca-app-title">How to use</h4>
                        <hr />
                    </p>
                    @foreach (var markupString in _componentMarkupList)
                    {
                        <div>
                            <h5>@markupString.Title</h5>

                            @foreach (var item in markupString.Code)
                            {
                                <p class="highlight p-2">
                                    <code>@item</code>
                                </p>
                            }
                        </div>
                    }
                </div>
                <div class="col markup-background hca-border-radius">
                    <p>
                        <h4 class="text-black-50">Example</h4>
                        <hr />
                    </p>
                    <div class="d-flex flex-column justify-content-evenly align-items-center">
                        <button type="button"
                                class="btn btn-light btn-rounded"
                                @onclick="() => ShowToast()">
                            Show toast
                        </button>

                    </div>
                </div>
            </div>
        </div>
        <Toast />
    </PageBody>
</PageWrapper>
