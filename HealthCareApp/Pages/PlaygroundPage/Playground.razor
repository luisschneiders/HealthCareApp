@page "/playground";
@using HealthCareApp.Components.PageV3;
@using HealthCareApp.Components.CardV3;
@using HealthCareApp.Components.Message;
@using HealthCareApp.Components.Breadcrumb;
@using HealthCareApp.Components.Badge;
@using HealthCareApp.Settings.Enum;

<div class="container-lg">

    <PageWrapper>

        <PageTopView>
            <PageTopWrapper>
                <PageTopTitle Title="Playground" />
                <Breadcrumb />
            </PageTopWrapper>
        </PageTopView>

        <PageMiddleView>
            <PageMiddleWrapper>
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-md-4 col-lg-3 py-2">
                        <CardView Link="/playground/card-v3">
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Card" CardProfileIcon="bi bi-card-heading">
                                    <div class="lead p-2">
                                        UI layout for <b>Card</b>
                                        <sup>
                                            <Badge BackgroundColor="@Level.Warning.ToString().ToLower()" Message="New" />
                                        </sup>
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-3 py-2">
                        <CardView Link="/playground/page-v3">
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Pages" CardProfileIcon="bi bi-layout-text-window-reverse">
                                    <div class="lead p-2">
                                        UI layout for <b>Page</b>
                                        <sup>
                                            <Badge BackgroundColor="@Level.Warning.ToString().ToLower()" Message="New" />
                                        </sup>
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-3 py-2">
                        <CardView Link="/playground/modal">
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Modal" CardProfileIcon="bi bi-window">
                                    <div class="lead p-2">
                                        UI layout for <b>Modals</b>
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-md-4 col-lg-3 py-2">
                        <CardView Link="/playground/toast">
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Toast" CardProfileIcon="bi bi-collection">
                                    <div class="lead p-2">
                                        UI layout for <b>Toast</b>
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-3 py-2">
                        <CardView Link="/playground/badge">
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Badge" CardProfileIcon="bi bi-usb-c">
                                    <div class="lead p-2">
                                        UI layout for <b>Badge</b>
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-3 py-2">
                        <CardView Link="/playground/spinner">
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Spinner" CardProfileIcon="bi bi-arrow-clockwise">
                                    <div class="lead p-2">
                                        UI layout for <b>Spinner</b>
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                </div>
            </PageMiddleWrapper>
        </PageMiddleView>

        <PageBottomView>
            <PageBottomWrapper>
            </PageBottomWrapper>
        </PageBottomView>

    </PageWrapper>

</div>
