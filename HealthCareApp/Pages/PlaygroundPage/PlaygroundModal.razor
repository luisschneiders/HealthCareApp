@page "/playground/modal";
@using HealthCareApp.Components.PageV3;
@using HealthCareApp.Components.Breadcrumb;
@using HealthCareApp.Components.CardV3;
@using HealthCareApp.Components.Modal;

<div class="container-lg">

    <PageWrapper>

        <PageTopView>
            <PageTopWrapper>
                <PageTopTitle Title="Modal" />
                <Breadcrumb />
            </PageTopWrapper>
        </PageTopView>

        <PageMiddleView>
            <PageMiddleWrapper>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <p>
                                <h4 class="hca-app-title">How to use</h4>
                                <hr />
                            </p>

                            @foreach (var markupString in _componentMarkupList)
                            {
                                <div>
                                    <h5>@markupString.Title</h5>
                                    <p class="highlight p-2">
                                        <code>
                                            @foreach (var (item, index) in markupString.Code.Select((value, index) => (value, index)))
                                            {
                                                <span class="@markupString.CssStyle[index]">
                                                    @item
                                                </span>
                                                <br />
                                                @if (@markupString.NewLine[index])
                                                {
                                                    <br />
                                                }
                                            }
                                        </code>
                                    </p>
                                </div>
                            }
                        </div>
                        <div class="col-sm-12 col-md-6 markup-background hca-border-radius">
                            <p>
                                <h4 class="text-black-50">Example</h4>
                                <hr />
                            </p>
                            <div class="container-lg">

                                <div class="row justify-content-center">
                                    <div class="col-sm-10 py-2">
                                        <CardView>
                                            <CardMiddle>
                                                <CardProfile CardProfileTitle="Modal" CardProfileIcon="bi bi-window">
                                                    <div class="lead p-5">
                                                        Modal size can be small, medium or large
                                                    </div>
                                                    <div class="p-3">
                                                        <button class="btn btn-outline-secondary btn-rounded"
                                                                data-target="#modalTarget"
                                                                @onclick="() => OpenModalAsync()">
                                                            Open Modal
                                                        </button>
                                                    </div>
                                                </CardProfile>
                                            </CardMiddle>
                                        </CardView>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </PageMiddleWrapper>
        </PageMiddleView>

        <PageBottomView>
            <PageBottomWrapper>
            </PageBottomWrapper>
        </PageBottomView>

    </PageWrapper>
    <Modal @ref="_modal" Size="ModalSize.md">
        <Title>Modal</Title>
        <Body>
            <h5 class="text-center">This is a modal!!</h5>
            <p class="lead p-4">
                Modals can have different sizes. They can be small, medium or large.
            </p>
        </Body>
        <Footer>
            <button type="button" class="btn btn-outline-secondary btn-rounded" data-dismiss="modal" @onclick="() => CloseModalAsync()">Close</button>
        </Footer>
    </Modal>
</div>
