@using HealthCareApp.Components.Modal
@using HealthCareApp.Settings.Theme

<Modal @ref="_modalAdd"
       Theme="Theme.Department"
       Size="ModalSize.lg">
    <Title>Add new department</Title>
    <Body>
        <EditForm Model="@_department"
                  OnValidSubmit="@HandleValidSubmitAsync"
                  OnInvalidSubmit="@HandleInvalidSubmitAsync"
                  autocomplete="off"
                  id="FormAddDepartment">
            <DataAnnotationsValidator />
            <div class="row">
                <div class="col-sm-8">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label"
                               for="Name">
                            Department Name
                        </label>
                        <div class="col-sm-8">
                            <InputText class="form-control"
                                       id="Name"
                                       @bind-Value="_department.Name" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    @if (_displayValidationErrorMessages)
                    {
                        <div class="row mb-3">
                            <div class="col">
                                <label>Validation Messages: </label>
                                <ValidationSummary />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </EditForm>
    </Body>
    <Footer>
        <button type="button"
                class="btn btn-light btn-rounded"
                data-dismiss="modal"
                @onclick="() => CloseModalAddAsync()">
            Cancel
        </button>
        <button type="submit"
                form="FormAddDepartment"
                class="btn btn-info btn-rounded text-white">
            Save
        </button>
    </Footer>
</Modal>
