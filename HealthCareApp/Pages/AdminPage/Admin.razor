@page "/admin";
@using HealthCareApp.Components.PageV3;
@using HealthCareApp.Components.Breadcrumb;
@using HealthCareApp.Components.CardV3;

<div class="container-lg">

    <PageWrapper>

        <PageTopView>
            <PageTopWrapper>
                <PageTopTitle Title="Admin" />
                <Breadcrumb />
            </PageTopWrapper>
        </PageTopView>

        <PageMiddleView>
            <PageMiddleWrapper>
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-md-4 col-lg-3">
                        <CardView Link="/admin/employees">
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Employees" CardProfileIcon="bi bi-people-fill">
                                    <div class="lead p-2">
                                        Add, update and view employees info
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-3">
                        <CardView>
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Departments" CardProfileIcon="bi bi-diagram-3-fill">
                                    <div class="lead p-2">
                                        Add, update and view departments info
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                    <div class="col-sm-12 col-md-4 col-lg-3">
                        <CardView>
                            <CardMiddle>
                                <CardProfile CardProfileTitle="Barcode label" CardProfileIcon="bi bi-upc-scan">
                                    <div class="lead p-2">
                                        Add, update and view barcode label info
                                    </div>
                                </CardProfile>
                            </CardMiddle>
                        </CardView>
                    </div>
                </div>
            </PageMiddleWrapper>
        </PageMiddleView>

        <PageBottomView>
            <PageBottomWrapper>
            </PageBottomWrapper>
        </PageBottomView>

    </PageWrapper>
</div>
