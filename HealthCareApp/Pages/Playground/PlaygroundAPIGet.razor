@page "/playground/api-get"
@using HealthCareApp.Components.Page
@using HealthCareApp.Components.Spinner
@using HealthCareApp.Components.Badge
@using HealthCareApp.Settings.Enum

<PageWrapper>
    <PageHeader>
        <PageTitle Title="APIs"></PageTitle>
        <PageMenu />
    </PageHeader>
    <PageBody>
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <p>
                        <h4 class="hca-app-title">How to use</h4>
                        <hr />
                    </p>
                    @foreach (var markupString in ComponentMarkupList)
                    {
                        <div>
                            <h5>@markupString.Title</h5>

                            @foreach (var item in markupString.Code)
                            {
                                <p class="highlight p-2">
                                    <code>@item</code>
                                </p>
                            }
                        </div>
                    }
                    <form class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label class="col-form-label"
                                   for="scope">
                                Select scope
                            </label>
                        </div>
                        <div class="col-auto">
                            <select class="form-select form-control"
                                    aria-label="Select scope"
                                    @bind="SelectedScope">
                                <option value="all" selected>All</option>
                                <option value="dictionary">Dictionary</option>
                                <option value="translation">Translation</option>
                                <option value="transliteration">Transliteration</option>
                            </select>
                        </div>
                        <div class="col-auto">
                            <button type="button"
                                    class="btn btn-info btn-rounded text-white"
                                    @onclick="() => GetLanguages()">
                                Test endpoint
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-6 markup-example">
                    <p>
                        <h4 class="text-black-50">Example</h4>
                        <hr />
                    </p>
                    <div>
                        <div class="d-flex flex-column justify-content-evenly align-items-center">
                            <Spinner Size="Size.Md" />
                        </div>
                        @if (getLanguagesError)
                        {
                            <div class="d-flex flex-column justify-content-evenly align-items-center">
                                <Badge Level='Level.Error' Message='Unable to get languages. Please try again later!' />
                            </div>
                        }
                        else
                        {
                            <code>
                                @Languages
                            </code>
                        }
                    </div>
                </div>
            </div>
        </div>
    </PageBody>
</PageWrapper>
