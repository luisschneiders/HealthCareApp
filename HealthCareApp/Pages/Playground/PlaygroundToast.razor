@page "/playground/toast"
@using HealthCareApp.Components.Page
@using HealthCareApp.Components.Toast

<PageWrapper>
    <PageHeader>
        <PageTitle Title="Component Toast"></PageTitle>
        <PageMenu />
    </PageHeader>
    <PageBody>
        <div class="container">
            <div class="row">
                <div class="col">
                    <p>
                        <h4 class="hca-app-title">How to use</h4>
                        <hr />
                    </p>
                    <p>
                        <h5>Component:</h5>
                        <code>@MarkupStringComponent</code>
                    </p>
                    <p>
                        <h5>Service:</h5>
                        <code>@MarkupStringService</code>
                    </p>
                    <p>
                        <h5>Method:</h5>
                        <code>@MarkupStringMethod</code>
                    </p>
                </div>
                <div class="col">
                    <div class="h-100 d-flex flex-column justify-content-evenly align-items-center">
                        <button type="button"
                                class="btn btn-light btn-rounded"
                                @onclick="() => ShowToast()">
                            Show toast
                        </button>

                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
        <Toast />
    </PageBody>
</PageWrapper>
