@using HealthCareApp.Components.Modal
@using HealthCareApp.Settings.Theme

<Modal @ref="_modalStart"
       Theme="Theme.TrackingInventory"
       Size="ModalSize.lg">
    <Title>Add new tracking inventory</Title>
    <Body>
        <EditForm Model="@_trackingInventoryMop"
                  OnValidSubmit="@HandleValidSubmitAsync"
                  OnInvalidSubmit="@HandleInvalidSubmitAsync"
                  autocomplete="off"
                  id="FormStartTrackingInventoryMop">
            <ObjectGraphDataAnnotationsValidator />
            <div class="row">
                <div class="col-sm-8">

                    <fieldset>
                        <legend>Barcode label details</legend>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label"
                                   for="DepartmentName">
                                Department
                            </label>
                            <div class="col-sm-8">
                                <InputText type="email"
                                           class="form-control"
                                           id="DepartmentName"
                                           disabled="true"
                                           @bind-Value="_labelMopDto.DepartmentName" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label"
                                   for="AreaName">
                                Area
                            </label>
                            <div class="col-sm-8">
                                <InputText type="text"
                                           class="form-control"
                                           id="AreaName"
                                           disabled="true"
                                           @bind-Value="_labelMopDto.AreaName" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-4 col-form-label"
                                   for="Quantity">
                                Mops Quantity
                            </label>
                            <div class="col-sm-8">
                                <InputNumber class="form-control"
                                             id="Quantity"
                                             disabled="true"
                                             @bind-Value="_labelMopDto.Quantity" />
                            </div>
                        </div>
                    </fieldset>

                </div>
                <div class="col-sm-4">
                    @*@if (_displayValidationErrorMessages)
                    {
                        <div class="row mb-3">
                            <div class="col">
                                <label>Validation Messages: </label>
                                <ValidationSummary />
                            </div>
                        </div>
                    }*@
                </div>
            </div>
        </EditForm>
    </Body>
    <Footer>
        <button type="button"
                class="btn btn-light btn-rounded"
                data-dismiss="modal" >
            Cancel
        </button>
        <button type="submit"
                form="FormStartTrackingInventoryMop"
                class="btn btn-info btn-rounded text-white" >
            Save
        </button>
    </Footer>
</Modal>
