@page "/tracking-inventory"
@using HealthCareApp.Components.Message
@using HealthCareApp.Components.PageV2

<AuthorizeView>
    <Authorized>
        <PageWrapper>
            <PageHeaderView>
                <PageHeaderWrapper>
                    <PageHeaderTitle Title="Inventory" />
                    <PageHeaderMenu>
                    </PageHeaderMenu>
                </PageHeaderWrapper>
            </PageHeaderView>
            <PageBodyView>
                <PageBodyWrapper Styles="p-2">
                    <div class="flex-container justify-content-center">
                        <div class="list-group">
                            <NavLink class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center"
                                        aria-current="true"
                                        href="/tracking-inventory/mops">
                                <i class="bi bi-signpost-2 md-icon text-info"></i>
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div>
                                        <h6 class="mb-0">Mops</h6>
                                        <p class="mb-0 opacity-75">Create a record history of <strong>mops</strong> used in all areas</p>
                                    </div>
                                </div>
                                <i class="bi bi-chevron-right md-icon"></i>
                            </NavLink>
                            <NavLink class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center disabled"
                                        aria-current="true"
                                        href="/tracking-inventory/chemicals">
                                <i class="bi bi-signpost-2 md-icon text-info"></i>
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div>
                                        <h6 class="mb-0">Chemicals</h6>
                                        <p class="mb-0 opacity-75">Create a record history of <strong>chemicals</strong> used in all areas</p>
                                    </div>
                                </div>
                                <i class="bi bi-chevron-right md-icon"></i>
                            </NavLink>
                        </div>
                    </div>
                </PageBodyWrapper>
            </PageBodyView>
            <PageFooterView />
        </PageWrapper>
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedMessage />
    </NotAuthorized>
</AuthorizeView>
