@if (@Link != "")
{
    <a href="@Link" class="card hca-card-view m-2">
        @ChildContent
    </a>
}
else
{
    <div class="card hca-card-view m-2">
        @ChildContent
    </div>
}

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Link { get; set; } = "";

}
